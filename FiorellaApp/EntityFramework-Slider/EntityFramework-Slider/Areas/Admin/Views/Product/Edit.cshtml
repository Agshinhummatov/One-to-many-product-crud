
@model ProductUpdateVM

@{
    ViewData["Title"] = "Edit";
  
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Product
                        </p>
                        <div class="my-3 ">
                            @foreach(var item in Model.Images)
                            {
                                <img src="~/img/@item.Image" style="width:150px; height:150px" alt="Alternate Text" />
                            }
                        </div>
                        <form asp-controller="Product" asp-action="Edit" enctype="multipart/form-data" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input class="form-control" asp-for="Name">
                                <span asp-validation-for="Name" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">

                                <label style="color:darkred" class="mt-2">Description </label>
                                <textarea class="form-control" id="category-text" asp-for="Description" rows="5"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input type="number" min="0" step=".01" class="form-control" asp-for="Price">
                                <span asp-validation-for="Price" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Count">Count</label>
                                <input type="number" step=".01" class="form-control" asp-for="Count">
                                <span asp-validation-for="Count" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Categories</label>
                                <select class="form-control" asp-for="CategoryId"  asp-items="@ViewBag.categories"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photos">Photos</label>
                                <input class="form-control" asp-for="Photos">
                                <span asp-validation-for="Photos" class="text-danger my-1"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{


    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("category-text")  //checkeditor qosanda mutleq bildirmeliyem burdaki getsin yuxardaki areani deyiij


    </script>

}


